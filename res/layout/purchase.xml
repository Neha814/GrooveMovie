<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    android:weightSum="10" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@drawable/top_bar"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back"
           android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="PURCHASE BUCKS"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rounded_textbox_blue"
        android:padding="5dp"
        android:layout_marginRight="30dp"
         >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:text="Get 250 Bucks"
            android:textSize="16dp" 
                 />
        
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:textColor="#E8F300"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView1"
            android:text="$0.99" />

        <Button
            android:id="@+id/buy1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            
            android:background="@drawable/rounded_edittext1"
            android:textColor="#993300"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Buy" />


    </RelativeLayout>
    <RelativeLayout
         android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:background="@drawable/rounded_textbox_blue"
        android:padding="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">
         <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:text="Get 1250 Bucks"
            android:textSize="16dp"  />
        
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
           android:textColor="#E8F300"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView3"
            android:text="$2.99" />

        <Button
            android:id="@+id/buy2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
           
             android:background="@drawable/rounded_edittext1"
            android:textColor="#993300"
            android:textSize="20dp"
            android:textStyle="bold"
            
            android:text="Buy" />
        
    </RelativeLayout>
    <RelativeLayout 
         android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:background="@drawable/rounded_textbox_blue"
        android:padding="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">
         <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
           android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:text="Get 5000 Bucks" 
            android:textSize="16dp" />
        
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
         android:textColor="#E8F300"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/textView5"
            android:text="$5.99" />

        <Button
            android:id="@+id/buy3"
            style="?android:attr/buttonStyleSmall"
             android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            
            android:background="@drawable/rounded_edittext1"
           android:textColor="#993300"
            android:textSize="20dp"
            android:textStyle="bold"
            
            android:text="Buy" />
        
    </RelativeLayout>

</LinearLayout>